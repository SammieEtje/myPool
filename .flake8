[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */static/*,
    */media/*,
    venv,
    env,
    .venv,
    node_modules,
    .pytest_cache,
    htmlcov,
    *.egg-info
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
per-file-ignores =
    __init__.py:F401
max-complexity = 10
